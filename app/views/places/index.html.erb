<div class="container">
	<div class="row">
		<div class="col-sm-1"></div>
		<div class="col-sm-10">

			<%= form_tag places_path, :method => 'get', style: "padding: 20px; width: 60%; margin-left: auto; margin-right: auto;" do %>
			<div class="input-group">
				<%= text_field_tag :query, params[:query], :class => 'form-control', :placeholder => 'Search...' %>
				<span class="input-group-btn">
					<%= submit_tag "Get moving", :name => nil, :class => 'btn btn-default'%>
				</span>
				<% end %>
			</div>

			<br>
			<div class="thumbnail">
				<% @places.each do |place| %>
				<%= link_to place_path(place) do%>
				<p class="padding"><%=image_tag place.image[0].thumb.url if place.image.any? %></p>
				<% end %>
				<% end %>
			</div>
			<div class="col-sm-1"></div>
		</div>
